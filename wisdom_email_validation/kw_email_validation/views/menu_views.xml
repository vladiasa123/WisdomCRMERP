<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action for opening the email validation web interface -->
    <record id="kw_email_validation_web_action" model="ir.actions.act_url">
        <field name="name">Bulk Email Validation</field>
        <field name="url">/email_validation/validate</field>
        <field name="target">self</field>
    </record>

    <menuitem id="kw_email_validation_main_menu"
              parent="base.menu_custom"
              name="Email Validation" 
              sequence="300"/>

    <!-- Menu item for accessing the email validation web interface -->
    <menuitem id="kw_email_validation_web_menu"
              parent="kw_email_validation_main_menu"
              name="Bulk Validation"
              action="kw_email_validation_web_action"
              sequence="10"/>

    <menuitem id="kw_email_validation_settings_main_menu"
              parent="kw_email_validation_main_menu"
              groups="kw_email_validation.group_kw_email_validation_manager,kw_email_validation.group_kw_email_validation_admin"
              name="Settings" 
              sequence="9999"/>
</odoo>
