<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mailing_contact_view_form_inherit_email_validation" model="ir.ui.view">
        <field name="name">mailing.contact.form.inherit.email.validation</field>
        <field name="model">mailing.contact</field>
        <field name="inherit_id" ref="mass_mailing.mailing_contact_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='email']" position="attributes">
                <attribute name="decoration-success">kw_email_validation_state == 'valid'</attribute>
                <attribute name="decoration-warning">kw_email_validation_state == 'pending'</attribute>
                <attribute name="decoration-danger">kw_email_validation_state == 'invalid'</attribute>
            </xpath>
            <xpath expr="//field[@name='email']" position="after">
                <field name="kw_email_validation_state" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="mailing_contact_view_tree_inherit_email_validation" model="ir.ui.view">
        <field name="name">mailing.contact.tree.inherit.email.validation</field>
        <field name="model">mailing.contact</field>
        <field name="inherit_id" ref="mass_mailing.mailing_contact_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='email']" position="attributes">
                <attribute name="decoration-success">kw_email_validation_state == 'valid'</attribute>
                <attribute name="decoration-warning">kw_email_validation_state == 'pending'</attribute>
                <attribute name="decoration-danger">kw_email_validation_state == 'invalid'</attribute>
            </xpath>
            <xpath expr="//field[@name='email']" position="after">
                <field name="kw_email_validation_state" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
