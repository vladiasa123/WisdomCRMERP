<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="email" position="attributes">
                <attribute name="decoration-success">kw_email_validation_state == 'valid'</attribute>
                <attribute name="decoration-warning">kw_email_validation_state == 'pending'</attribute>
                <attribute name="decoration-danger">kw_email_validation_state == 'invalid'</attribute>
            </field>
            <field name="email" position="after">
                <field name="kw_email_validation_state" invisible="1"/>
            </field>
        </field>
    </record>
    
    <record id="action_validate_email_partner" model="ir.actions.server">
        <field name="name">Validate Email</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="binding_model_id" ref="base.model_res_partner"/>
        <field name="binding_view_types">form,list</field>
        <field name="state">code</field>
        <field name="code">action = records.action_kw_email_validation_validate_email()</field>
    </record>
</odoo>
