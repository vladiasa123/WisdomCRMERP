<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_crm_lead_form" model="ir.ui.view">
        <field name="name">crm.lead.form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <field name="email_from" position="attributes">
                <attribute name="decoration-success">kw_email_validation_state == 'valid'</attribute>
                <attribute name="decoration-warning">kw_email_validation_state == 'pending'</attribute>
                <attribute name="decoration-danger">kw_email_validation_state == 'invalid'</attribute>
            </field>
            <field name="email_from" position="after">
                <field name="kw_email_validation_state" invisible="1"/>
            </field>
        </field>
    </record>
    
    <record id="action_validate_email_crm_lead" model="ir.actions.server">
        <field name="name">Validate Email</field>
        <field name="model_id" ref="crm.model_crm_lead"/>
        <field name="binding_model_id" ref="crm.model_crm_lead"/>
        <field name="binding_view_types">form,list</field>
        <field name="state">code</field>
        <field name="code">action = records.action_kw_email_validation_validate_email()</field>
    </record>
</odoo>
