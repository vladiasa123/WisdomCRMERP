<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_applicant_view_form_inherit_email_validation" model="ir.ui.view">
        <field name="name">hr.applicant.form.inherit.email.validation</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
        <field name="arch" type="xml">
            <field name="email_from" position="attributes">
                <attribute name="decoration-success">kw_email_validation_state == 'valid'</attribute>
                <attribute name="decoration-warning">kw_email_validation_state == 'pending'</attribute>
                <attribute name="decoration-danger">kw_email_validation_state == 'invalid'</attribute>
            </field>
            <field name="email_from" position="after">
                <field name="kw_email_validation_state" invisible="1"/>
            </field>
        </field>
    </record>

</odoo>
