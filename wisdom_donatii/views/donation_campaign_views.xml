<!-- views/donation_campaign_views.xml -->
<odoo>
    <!-- Tree View pentru Campanii de Donații -->
    <record id="view_donation_campaign_tree" model="ir.ui.view">
        <field name="name">donation.campaign.list</field>
        <field name="model">donation.campaign</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" string="Nume"/>
                <field name="start_date" string="Data Începerii"/>
                <field name="end_date" string="Data Încheierii"/>
                <field name="active" string="Activă"/>
            </list>
        </field>
    </record>

    <record id="view_donation_campaign_form" model="ir.ui.view">
        <field name="name">donation.campaign.form</field>
        <field name="model">donation.campaign</field>
        <field name="arch" type="xml">
            <form string="Campanie de Donații">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description" string="Descriere"/>
                    </group>
                    <group>
                        <field name="start_date" string="Data Începerii"/>
                        <field name="end_date" string="Data Încheierii"/>
                        <field name="active" string="Activă"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acțiune pentru Campanii de Donații -->
    <record id="action_donation_campaigns" model="ir.actions.act_window">
        <field name="name">Campanii de Donații</field>
        <field name="res_model">donation.campaign</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Înregistrează prima ta campanie.
            </p>
        </field>
    </record>

    <!-- Acțiune pentru Donații -->
    <record id="action_donation" model="ir.actions.act_window">
        <field name="name">Donații</field>
        <field name="res_model">donation.donation</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Înregistrează prima ta donație.
            </p>
        </field>
    </record>
</odoo>
