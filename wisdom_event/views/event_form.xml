<odoo>
    <record id="view_event_form_readonly" model="ir.ui.view">
        <field name="name">event.event.form.readonly</field>
        <field name="model">event.event</field>
        <field name="inherit_id" ref="event.view_event_form"/>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes" groups="wisdom_hr_employee.group_res_angajat">
                <attribute name="create">false</attribute>
                <attribute name="edit">false</attribute>
                <attribute name="delete">false</attribute>
            </xpath>

            <xpath expr="//header" position="inside">
                <button name="action_attend_event"
                        type="object"
                        string="Attend"
                        class="oe_highlight"/>
            </xpath>
        </field>
    </record>

    <record id="action_report_Campaign" model="ir.actions.act_window">
        <field name="name">Event Report</field>
        <field name="res_model">event.report</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Intocmeste primul raport al evenimentului.
            </p>
        </field>
    </record>

     <menuitem
        id="menu_event_report"
        name="Report"
        sequence="30"
        parent="event.event_main_menu"
        action="action_report_Campaign"
    />

    
</odoo>
