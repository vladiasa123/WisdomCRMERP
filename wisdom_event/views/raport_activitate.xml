<odoo>
    <!-- Action -->
    <record id="action_activity_report" model="ir.actions.act_window">
        <field name="name">Raport Activitate</field>
        <field name="res_model">event.report</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_activity_report_form" model="ir.ui.view">
        <field name="name">event.event.form</field>
        <field name="model">event.report</field>
        <field name="arch" type="xml">
            <form string="Raport Activitate">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="event_id"/> 
                        <field name="worked_hours"/>
                        <field name="task_description"/>
                        <field name="attachments_ids" widget="many2many_binary"/>
                    </group>
                    <footer>
                        <button string="Trimite raport" type="object" name="action_send_report" class="btn-primary"/>
                        <button string="AnuleazÄƒ" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_activity_report_tree" model="ir.ui.view">
        <field name="name">event.event.list</field>
        <field name="model">event.report</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="event_id"/> 
                <field name="worked_hours"/>
                <field name="state"/>
            </list>
        </field>
    </record>


</odoo>
