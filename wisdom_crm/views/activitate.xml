<odoo>
    <record id="view_beneficiar_activitate_form" model="ir.ui.view">
        <field name="name">beneficiar.activitate.form</field>
        <field name="model">beneficiar.activitate</field>
        <field name="arch" type="xml">
            <form string="Activitate Beneficiar">
                <sheet>
                    <group>
                        <field name="numar"/>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_beneficiar_activitate_tree" model="ir.ui.view">
        <field name="name">beneficiar.activitate.tree</field>
        <field name="model">beneficiar.activitate</field>
        <field name="arch" type="xml">
            <list string="Activități Beneficiari">
                <field name="numar"/>
                <field name="name"/>
            </list>
        </field>
    </record>


    <record id="action_beneficiar_activitate" model="ir.actions.act_window">
        <field name="name">Activități</field>
        <field name="res_model">beneficiar.activitate</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_activitati_beneficiari"
              name="Activități"
              parent="menu_beneficiari_root"
              action="action_beneficiar_activitate"
              sequence="15"/>

</odoo>
