<odoo>
    <!-- Tree View -->
    <record id="view_beneficiar_curs_tree" model="ir.ui.view">
        <field name="name">beneficiar.curs.list</field>
        <field name="model">beneficiar.curs</field>
        <field name="arch" type="xml">
            <list string="Cursuri Beneficiar">
                <field name="beneficiari_id"/>
                <field name="curs_id"/>
                <field name="data_inceput"/>
                <field name="data_sfarsit"/>
                <field name="data_certificat"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_beneficiar_curs_form" model="ir.ui.view">
        <field name="name">beneficiar.curs.form</field>
        <field name="model">beneficiar.curs</field>
        <field name="arch" type="xml">
            <form string="Alocare Curs Beneficiar">
                <sheet>
                    <group>
                        <field name="beneficiari_id"/>
                        <field name="curs_id"/>
                        <field name="data_inceput"/>
                        <field name="data_sfarsit"/>
                        <field name="data_certificat"/>
                        <field name="certificat_file" filename="certificat_filename"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_beneficiar_curs" model="ir.actions.act_window">
        <field name="name">Cursuri Beneficiar</field>
        <field name="res_model">beneficiar.curs</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_cursuri_alocare" name="Alocare Curs Beneficiar"
              parent="menu_cursuri_root" action="action_beneficiar_curs"/>
</odoo>
