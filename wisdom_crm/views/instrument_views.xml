<odoo>
    <!-- Tree View -->
    <record id="view_instrument_tree" model="ir.ui.view">
        <field name="name">instrument.tree</field>
        <field name="model">instrumente.instrument</field>
        <field name="arch" type="xml">
            <list string="Instrumente">
                <field name="name"/>
                <field name="type"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_instrument_form" model="ir.ui.view">
        <field name="name">instrument.form</field>
        <field name="model">instrumente.instrument</field>
        <field name="arch" type="xml">
            <form string="Instrument">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="type"/>
                        <field name="file" filename="file_name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_instrument" model="ir.actions.act_window">
        <field name="name">Instrumente</field>
        <field name="res_model">instrumente.instrument</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
